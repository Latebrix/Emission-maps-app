<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map CSV Columns"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the column number (starting from 0):"/>

    <EditText
        android:id="@+id/edit_text_lat_col"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Latitude Column Index (e.g., 0)"
        android:inputType="number" />

    <EditText
        android:id="@+id/edit_text_lon_col"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Longitude Column Index (e.g., 1)"
        android:inputType="number" />

    <EditText
        android:id="@+id/edit_text_val_col"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Value Column Index (e.g., 2)"
        android:inputType="number" />

    <CheckBox
        android:id="@+id/checkbox_has_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First row is a header"
        android:checked="true"/>

</LinearLayout>
